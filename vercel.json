{
  "version": 2,
  "builds": [
    
    {
      "src": "frontend/interview-prep-ai/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
   
    {
      "src": "backend/server.js",
      "use": "@vercel/node-server"
    }
  ],
  "routes": [
 
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    
    { "src": "/(.*)",       "dest": "frontend/interview-prep-ai/dist/$1" }
  ]
}
